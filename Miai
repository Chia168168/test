  <p>è²¼ä¸Š Base64 ç·¨ç¢¼ï¼Œæˆ–ä¸Šå‚³æ–‡å­—æª”ï¼Œè½‰æ›ç‚ºåœ–ç‰‡</p>

  <textarea id="base64input" placeholder="è«‹è²¼ä¸Š Base64 ç·¨ç¢¼..."></textarea><br>
  <input type="file" id="fileInput" accept=".txt"><br>
  <button onclick="convertBase64()">è½‰æ›æˆåœ–ç‰‡</button>

  <div id="preview"></div>

  <script>
    // è™•ç†æª”æ¡ˆä¸Šå‚³
    document.getElementById('fileInput').addEventListener('change', function(evt) {
      const file = evt.target.files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = function(e) {
        document.getElementById('base64input').value = e.target.result.trim();
      };
      reader.readAsText(file);
    });

    // è½‰æ› Base64 æˆåœ–ç‰‡
    function convertBase64() {
      const base64 = document.getElementById('base64input').value.trim();
      if (!base64) {
        alert("âš ï¸ è«‹å…ˆè²¼ä¸Š Base64 æˆ–é¸æ“‡æª”æ¡ˆ");
        return;
      }

      try {
        const img = document.createElement('img');
        img.src = "data:image/*;base64," + base64;
        const preview = document.getElementById('preview');
        preview.innerHTML = "<h3>âœ… è½‰æ›æˆåŠŸï¼š</h3>";
        preview.appendChild(img);

        // ä¸‹è¼‰é€£çµ
        const link = document.createElement('a');
        link.href = img.src;
        link.download = "output.png";
        link.textContent = "â¬‡ï¸ ä¸‹è¼‰åœ–ç‰‡";
        preview.appendChild(link);
      } catch (e) {
        alert("âŒ è½‰æ›å¤±æ•—ï¼Œè«‹ç¢ºèª Base64 æ˜¯å¦æ­£ç¢º");
      }
    }
  </script>
